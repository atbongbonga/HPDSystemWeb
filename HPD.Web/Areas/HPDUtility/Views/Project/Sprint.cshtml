    <script>
        function isNumberKey(evt) {
                var charCode = (evt.which) ? evt.which : evt.keyCode;
                if (charCode != 46 && charCode > 31
                    && (charCode < 48 || charCode > 57))
                    return false;

                return true;
        }
        $(document).ready(function () {

            var sprintId = "@ViewBag.Message";

            
            var ClearTaskForm = function () {

                $("#txtANSTTitle").val("");
                $("#msANSTType").val("");
                $(".gj-editor").find("div[role='body']").html("");
                $(".gj-editor").find("div[role='body']").append("<br/><br/>");
                $("#msANSTAss").val("");
                $("#txtANSTOH").val("");
                $("#txtANSTRH").val("");
                $("#txtANSTCH").val("");
                $("#msANSTStat").val("");
                $("#msPrio").val("");
                $("#msANSTAct").val("");
            };

            var GetSprintTaskList = function () {

                $.post("@Url.Action("GetSprintTask", "Project")", { SprintId: sprintId }, function (data) {
                    data = JSON.parse(data);
                    var BactaskCard = $('#taskBacSortable');
                    BactaskCard.empty();
                    var DevtaskCard = $('#taskDevSortable');
                    DevtaskCard.empty();
                    var TestaskCard = $('#taskTesSortable');
                    TestaskCard.empty();
                    var DeptaskCard = $('#taskDepSortable');
                    DeptaskCard.empty();
                $(data).each(function (index, task) {
                    if (task.Activity === 1)
                    {
                        BactaskCard.append(
                            '<li class="sortable-item task" id="' + task.Id + '">' +
