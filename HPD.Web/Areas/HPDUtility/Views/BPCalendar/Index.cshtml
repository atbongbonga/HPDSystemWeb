
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HPDUtility/Views/Shared/_LayoutAccount.cshtml";

    <link rel="stylesheet" type="text/css" href="~/Areas/HPDUtility/Content/css/fastselect.min.css" />

    <link rel="stylesheet" type="text/css" href="~/Areas/HPDUtility/Content/css/FullCalendar/jquery.qtip.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/HPDUtility/Content/css/FullCalendar/fullcalendar.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/HPDUtility/Content/css/FullCalendar/fullcalendar.print.css" media="print" />
   
}

<div class="container-fluid">
    <br />
    <!-- Page Heading -->
    @*<h1 class="h3 mb-4 text-gray-800 text-center">Blue Print Calendar</h1>*@
    
    <div class="row">
        <div class="col-lg-12">
            <!-- Basic Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Blueprint Calendar</h6>
                </div>
                <div class="card-body">
                    <div class="row" id="bluePrintCalendar">
                        <div class="box box-primary">
                            <div class="row" id="bpfilteroption">
                                <div class="col-lg-12 col-md-3">
                                    <div class="form-group row">
                                        <div class="col-lg-4 col-md-4">
                                            
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                           
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group form-inline">
                                                <label for="msBPCDeveloper" class="mr-sm-2">Developer:</label>
                                                <select class=" mb-2 mr-sm-2 form-control singleInputDynamic" data-load-once="true" name="Developer" id="msBPCDeveloper" placeholder="Developer"></select>
                                                <button class="btn btn-primary btn-user btn-circle text-white" id="btnSrchBPCDeveloper">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <div class="box-body no-padding">
                                <!-- THE CALENDAR -->
                                <div id="calendar"></div>
                            </div><!-- /.box-body -->
                        </div><!-- /. box -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

    <!--Sprint Details Modal-->
    <div class="modal fade" id="sprintDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-black-50 font-weight-bolder" id="SDMProgramName"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 class="text-info">Title:</h5>
                    <p id="txtSDMTitle" class="text-black-50"></p>
                    <hr>
                    <h5 class="text-info">Timeline:</h5>
                    <p id="txtSDMProjLen" class="text-black-50"></p>
                    <hr>
                    <h5 class="text-info">Member:</h5>
                    <div id="txtSDMMem"></div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End of Main Content -->




@section scripts
{
    <script src="~/Areas/HPDUtility/Content/js/fastselect.min.js" type="text/javascript"></script>

    <script src="~/Areas/HPDUtility/Content/js/FullCalendar/moment.min.js" type="text/javascript"></script>
    <script src="~/Areas/HPDUtility/Content/js/FullCalendar/jquery.qtip.min.js" type="text/javascript"></script>
    <script src="~/Areas/HPDUtility/Content/js/FullCalendar/fullcalendar.min.js" type="text/javascript"></script>
    

    <script type="text/javascript">

        $(document).ready(function () {

            var developer = '';

            $.post("@Url.Action("GetDeveloper", "BPCalendar")", function (data) {
                var dbList = $('#msBPCDeveloper');
                dbList.empty();
                dbList.prepend("<option value=''>ALL</option>");    
                data = JSON.parse(data);
                $(data).each(function (index, db) {
                    dbList.append(
                        '<option value="' + db.EmpCode + '">' + db.EmpName + '</option>'
                    );
                   
                });
                
            });
            //$('#msBPCDeveloper').fastselect({
            //    onItemSelect: function ($item, itemModel) {
            //        var dev = itemModel.value;
            //        BPCalender(dev);
            //    }
            //});

            var BPCalender = function (developer) {

                $('#calendar').fullCalendar({
                themeSystem: 'bootstrap4',
                header:
                {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                buttonText: {
                    today: 'today',
                    month: 'month',
                    week: 'week',
                    day: 'day'
                },
                rendering: 'background',
                height: 500,
                events: function (start, end, timezone, callback) {
                    $.ajax({
                        url: '@Url.Action("GetSprintListByDev", "BPCalendar")',
                        type: "GET",
                        dataType: "JSON",
                        data: {
                            empCode: developer
                        },
                        success: function (result) {
                            var events = [];
                            result = JSON.parse(result);
                            $.each(result, function (i, data) {
                                //Random Event Color
                                var letters = '012345'.split('');
                                var rancolor = '#';
                                rancolor += letters[Math.round(Math.random() * 5)];
                                letters = '0123456789ABCDEF'.split('');
                                for (var i = 0; i < 5; i++) {
                                    rancolor += letters[Math.round(Math.random() * 15)];
                                }
                                events.push(
                                    {
                                        id: data.Id,
                                        title: data.Title,
                                        description: data.ProgramName,
                                        start: moment(data.EndDate).format('YYYY-MM-DD'),
                                        end: moment(data.EndDate).format('YYYY-MM-DD'),
                                        color: rancolor,
                                        sdate: moment(data.StartDate).format('MM/DD/YYYY')
                                    });
                            });

                            callback(events);
                        }
                    });
                },
                eventClick: function (calEvent, jsEvent, view) {
                    @*location.href = '@Url.Action("Sprint", "Project")?Id=' + calEvent.id+'';
                    alert('Coordinates: ' + jsEvent.pageX + ',' + jsEvent.pageY);
                    alert('View: ' + view.name);
                     change the border color just for fun*@

                    var sdate = calEvent.sdate;
                    var edate = calEvent.start;
                    
                    $("#SDMProgramName").text(calEvent.description);
                    $("#txtSDMTitle").text(calEvent.title);
                    $("#txtSDMProjLen").text(sdate + ' to ' + edate.format('MM/DD/YYYY'));
                    $.post("@Url.Action("GetSprintDeveloper", "BPCalendar")", { sprintId: calEvent.id }, function (res) {
                        var devList = $('#txtSDMMem');
                        devList.empty();
                        res = JSON.parse(res);
                        $(res).each(function (index, dev) {
                            devList.append(
                                '<p class="text-black-50">' + dev.EmpName + '</p>'
                            );
                        });
                                   
                    });
                    $('#sprintDetailsModal').modal('toggle');
                    $(this).css('border-color', 'red');
                },
                eventRender: function (event, element) {

                    element.qtip(
                        {
                            content: event.description,
                        });

                    if (event.color) {
                        element.css('background-color', event.color)
                    }
                },

            });
            };


            BPCalender(developer);

            $("#btnSrchBPCDeveloper").on('click', function () {
                $('#calendar').fullCalendar('destroy');
                developer = $("#msBPCDeveloper").val();
                BPCalender(developer);
            });


        });
    </script>        
}